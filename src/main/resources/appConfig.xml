<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class="hyobin.core.member.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository" /> <!-- ref -> bean id가 ref인 bean을 참조 -->
    </bean>

    <bean id="memberRepository" class="hyobin.core.member.MemoryMemberRepository" />

    <bean id="orderService" class="hyobin.core.order.OrderServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository"/>
        <constructor-arg name="discountPolicy" ref="discountPolicy"/>
    </bean>

    <bean id="discountPolicy" class="hyobin.core.discount.RateDiscountPolicy"/>

</beans>